<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

   <mapper namespace="mapper.hotel.member">
     <!--  회원가입  ?-> #{}, java + ; 다삭제 -->
   <insert id="join" parameterType="com.hotel.vo.HotelMemberVO">	
     
    insert into hotel_member values(#{hid},#{pass},#{hname},#{hemail},#{zonecode},#{haddr1},#{haddr2},#{hp},#{pnumber})    
   </insert>
   
    <!--  아이디 중복 리절트타입 int 면 생략가능 -->
   <select id="idcheck" parameterType="java.lang.String" resultType="int">
    select count(hid) from hotel_member where hid=#{hid}
   </select>
   
   <!--  로그인 -->
   <select id="login" parameterType="com.hotel.vo.HotelMemberVO" resultType="int">
    select count(*) from hotel_member where hid=#{hid} and pass=#{pass}
   </select>
   
   <!-- 회원조회(아이디,이메일)-->
   <select id="memberCheck" parameterType="com.hotel.vo.HotelMemberVO" resultType="int" >
   select count(*) from hotel_member where hid=#{hid} and hemail=#{hemail}
   </select>
   
   <!-- 비밀번호 변경 -->
	<update id="updatePw" parameterType="com.hotel.vo.HotelMemberVO" >
	update hotel_member set pass = #{pass} where hid = #{hid}
	</update>
   </mapper>
   